@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="login-form-wrap">
    <div class="text-center">
        <h1 class="form-heading">Login</h1>
    </div>
    <form class="form form-login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div>
            <div class="techno-input-group">
                <label for="" class="techno-label">Email<span>*</span></label>
                <div class="techno-icon-input">
                    <span><i class="bi bi-person-circle"></i></span>
                    <input asp-for="Input.Email" class="form-control" placeholder="Your Email" autocomplete="username" aria-required="true" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

            </div>
            <div class="techno-input-group">
                <label for="" class="techno-label">Password<span>*</span></label>
                <div class="techno-icon-input">
                    <span><i class="bi bi-lock"></i></span>
                    <input asp-for="Input.Password" class="form-control" placeholder="New password" autocomplete="new-password" aria-required="true" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

            </div>

            <div class="techno-input-group">
                <label for="" class="techno-label">Confirm Password<span>*</span></label>
                <div class="techno-icon-input">
                    <span><i class="bi bi-lock"></i></span>
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" autocomplete="new-password" aria-required="true" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            </div>

            <div class="techno-input-group">
                <button class="default-button w-100 hover-button"  type="submit">Reset</button>
            </div>
            <div class="w-75 mx-auto text-center">
                <p class="techno-form-context">
                    By providing your email address, you agree to our
                    Privacy Policy and Terms of Service.
                </p>
            </div>
        </div>
    </form>
</div>

