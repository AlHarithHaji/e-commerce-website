@model IEnumerable<He_SheStore.ViewModel.OrderDetailViewModel>
@{
    ViewData["Title"] = "CheckOrder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashborad</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Order detail</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-center" style="float: left">Order Detail</h3>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="OrderdetailDataTable" width="100%" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Country</th>
                                        <th>Product Name</th>
                                        <th>Product Price</th>
                                        <th>Product Size</th>
                                        <th>Order Qnty</th>
                                        <th>Product Image</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)

                                    {
                                        <tr>
                                            <td>@(item.FirstName + " " + item.LastName)</td>
                                            <td><b>Email:</b>  @item.Email
                                            <br />
                                            <b>Adress:</b>   @item.Address
                                            <br />
                                            <b>Phone:</b>  @item.Mobile
                                            </td>
                                            
                                            <td>@item.Country</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.ProductPrice</td>
                                            <td>@item.ProductSize</td>
                                            <td>@item.Quantity</td>                                         
                                            <td><img src="~/ProductImage/@item.ProductPicture" style="height:100px;width:100px" /></td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        $('#OrderdetailDataTable').DataTable({
            autoWidth: false,
            columnDefs: [
                {
                    targets: ['_all'],
                    className: 'mdc-data-table__cell',
                },
            ],

        });


    </script>
}
