    </script>
    <script>
        const cvvInput = document.getElementById('cvvInput');
        cvvInput.addEventListener('input', function () {
            const cvv = this.value;
            if (cvv.length > 3) {
                this.value = cvv.slice(0, 3);
            }
        });
    </script>
    <script>
        $("#form").submit(function (e) {
            e.preventDefault();
            var submitButton = $(this).find('input[type="submit"]');
            submitButton.prop("disabled", true);
            var paymentMethod = $("input[name='OrderType']:checked").val();
            if (paymentMethod === "Cash") {
                $.ajax({
                    url: "/Home/CheckOut",
                    method: "POST",
                    data: $("#form").serialize(),
                    dataType: "JSON",
                    success: function (response) {
                        if (response.success) {
                            alert(response.errors);
                            window.location.href = '../Home/Index';
                        }
                        else {
                            alert("Validation errors: " + response.errors);
                        }
                        submitButton.prop("disabled", false);
                    }
                });
            } else if (paymentMethod === "Credit") {
                var formDataArray = $("#form").serializeArray();
                var cardNumber = $("#cardNumber").val();
                formDataArray.push({ name: "CardHolderNumber", value: cardNumber });
                var formDataSerialized = $.param(formDataArray);
                $.ajax({
                    url: "/Home/CheckOut",
                    method: "POST",
                    data: formDataSerialized,
                    dataType: "JSON",
                    success: function (response) {
                        if (response.success) {
                            alert(response.errors);
                            window.location.href = '../Home/Index';
                        } else {
                            alert("Validation errors: " + response.errors);
                        }
                        submitButton.prop("disabled", false);                   
                    },
                    error: function (error) {
                        submitButton.prop("disabled", false);
                        alert(error);
                    }
                });
            }
        });
    </script>


}
