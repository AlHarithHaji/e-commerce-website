@model He_SheStore.Models.Contactus
@{
    ViewData["Title"] = "Contactus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class='staic-banner'>
    <div class="container">
        <h2>Contact Us</h2>
        <p class="Static-navigation">
            <a href="/Home/Index">Home</a>
            <i class="bi bi-chevron-right"></i>
            <a>Contact Us</a>
        </p>
    </div>
</div>
<br />
<div class="container">
    <p>Feel free to drop by our store during our operating hours or give us a call if you need assistance or have any inquiries. You can also reach out to us via email, and we'll do our best to respond promptly.</p>
</div>
<div class="container mt-1">
    <div class="row">
        <div class="col-md-6">
            <form id="form">
                <div class="row">
                    <div class="col-md-6">
                        <div class="techno-input-group">
                            <label for="" class="techno-label">First name<span>*</span></label>
                            <div class="techno-icon-input">
                                <span><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="FirstName" placeholder="First Name">
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="techno-input-group">
                            <label for="" class="techno-label">Last name<span>*</span></label>
                            <div class="techno-icon-input">
                                <span><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="LastName" placeholder="Last Name">
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="techno-input-group">
                            <label for="" class="techno-label">Email<span>*</span></label>
                            <div class="techno-icon-input">
                                <span><i class="bi bi-envelope"></i></span>
                                <input type="email" asp-for="CustomerEmail" placeholder="Email">
                            </div>
                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>


                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="techno-input-group">
                            <label for="" class="techno-label">Subject<span>*</span></label>
                            <div class="techno-icon-input">
                                <span><i class="bi bi-card-text"></i></span>
                                <input type="text" asp-for="MessageSubject" placeholder="Subject">
                            </div>
                            <span asp-validation-for="MessageSubject" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="techno-input-group">
                            <label for="" class="techno-label">Message<span>*</span></label>
                            <div class="techno-icon-textarea">
                                <textarea type="text" asp-for="CustomerMessage" placeholder="Message"></textarea>
                            </div>
                            <span asp-validation-for="CustomerMessage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 text-end mt-4">
                        <input type="submit" class="default-button text-Uppercase hover-button" value="Save" />
                    </div>
                </div>
            </form>

        </div>
        <div class="col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13462.252854735292!2d35.8798929!3d32.484372699999994!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151c7790b6e57775%3A0x857cd49c161736b0!2sAl-Husun!5e0!3m2!1sen!2sjo!4v1697798806630!5m2!1sen!2sjo"
                    width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>
<br />
<br />
<br />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

        $("#form").submit(function (e) {
            e.preventDefault();
            var submitButton = $(this).find('input[type="submit"]');
            // Disable the submit button
            submitButton.prop("disabled", true);

            $.ajax({
                url: "/Home/ContactUs",
                method: "POST",
                data: $("#form").serialize(),
                datatype: "JSON",
                success: function (response) {
                    // Enable the submit button
                    submitButton.prop("disabled", false);

                    alert(response);
                    window.location.href = '../Home/Thankyou';
                },
                error: function (error) {
                    // Enable the submit button
                    submitButton.prop("disabled", false);

                    alert(error);
                }
            });
        });

    </script>
}