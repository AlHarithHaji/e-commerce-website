<div class='staic-banner'>
    <div class="container">
        <h2>Shop</h2>
        <p class="Static-navigation">
            <a href="index.html">Home</a>
            <i class="bi bi-chevron-right"></i>
            <a>Product Detail</a>
        </p>
    </div>
</div>
