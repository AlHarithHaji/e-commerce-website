@model He_SheStore.ViewModel.ProductShopViewModel
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> allSizes = new List<string>();
    foreach (var productSize in ViewBag.size)
    {
        allSizes.Add(productSize.Name);
    }

    string[] desiredSizes = { "XS", "S", "M", "L", "XL" };
    string formattedSizes = string.Join(" ", desiredSizes.Where(size => allSizes.Contains(size)));
}
}
<style>
    .product-img-wrap {
        text-align: center;
    }

    .Product-detail-ul {
        margin: 0;
        padding: 0;
    }

        .Product-detail-ul li {
            list-style: none;
            display: inline-block;
            padding-right: 10px;
            font-size: 12px;
        }

            .Product-detail-ul li a {
                text-decoration: none;
                color: black;
                transition: all 200ms ease-in-out;
            }

                .Product-detail-ul li a:hover {
                    text-decoration: none;
                    color: #d93939;
                    transition: all 200ms ease-in-out;
                }

            .Product-detail-ul li::after {
                content: "\203A";
                font-size: 15px;
                margin-left: 10px;
            }

            .Product-detail-ul li:last-child::after {
                content: "" !important;
            }

            .Product-detail-ul li:last-child a {
                color: gray;
            }

    .product-title-wrap {
        margin: 20px 0;
    }

    .product-title {
        font-size: 35px;
        font-weight: 600;
    }

    .Diacounted-Price {
        color: grey;
        margin-right: 10px;
    }

    .pro-detail-divider {
        width: 100%;
        margin: 10px 0;
    }

    .description-p {
        font-size: 14px;
    }

    .product-color-selection {
        padding: 10px 0;
    }

    .c-option {
        height: 28px;
        width: 28px;
        /* background-color: #d93939; */
