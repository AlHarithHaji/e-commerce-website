<div class="product-Detail">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="produc-img">
                    <div class="product-img-wrap">
                        <img src="~/ProductImage/@Model.DetailProduct.ProductPicture" alt="" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="product-decription mb-3">
                    <div class="productDet-navigation">
                        <span>
                            <ul class="Product-detail-ul">
                                <li>
                                    <a href="/Home/Index">Home</a>
                                </li>
                                <li>
                                    <a href="/Home/Shop">Shoes</a>
                                </li>
                                <li>
                                    <a href="">product Detail</a>
                                </li>
                            </ul>
                        </span>
                    </div>
                    <div class="product-title-wrap">
                        <h3 class="product-title">@Model.DetailProduct.ProductName</h3>
                    </div>
                    <div class="Pricing-Section">
                        <h3 class="Product-price">
                            <span class="actuall-price">$@Model.DetailProduct.ProductPrice</span>
                        </h3>
                    </div>
                    <hr class="pro-detail-divider" />
                    <div class="product-description ">
                        <span class="actuall-price"> <h5 style="font-weight:bold">Short Description:</h5>  </span>
                        <p class="description-p">
                            @{
                                var description = Model.DetailProduct.ProductDescription;
                                var words = description.Split(' ');
                                if (words.Length > 40)
                                {
                                    description = string.Join(" ", words.Take(40));
                                    description += " ...";
                                }
                                @description
                            }
                        </p>
                    </div>
                    <hr class="pro-detail-divider" />

                    <div class="product-size-selection">
                        <p class="size-title">
                            <strong>Size :</strong> <span id="selected-size"></span>
                        </p>
                        <div>
                            <div class="size-group">
                                <p class="size-group-label"></p>

                                <ul class="size-list">
                                    @foreach (var item in ViewBag.size)
                                    {
                                        <li><span class="size-span" onclick="chooseSize('@item.Name')">@item.Name</span></li>
                                    }
                                </ul>

                            </div>
                        </div>
                    </div>
                    <hr class="pro-detail-divider" />
                    <div class="product-order-section">
                        <div class="Quantity-section mt-3">

                            <button class="default-button hover-button w-100" onClick="handleAddToCart()">
                                Add To Cart
                            </button>
                        </div>
                        <div class="deleiver-time mt-5">
                            <p class="Deleivery-title">
                                <strong>
                                    <Truck />
                                    &nbsp;Estimated Deleivery :
                                </strong>
                                Express <span>With in 14 days</span>
                            </p>
                        </div>
                    </div>
                    <hr class=" pro-detail-divider" />
                    <div class="share-option mt-4">
                        <div class="share-option-wrap">
                            <p>
                                <strong>Share :</strong>
                                <i class="bi bi-facebook"></i>
                                &nbsp;
                                <i class="bi bi-instagram"></i>
                                &nbsp;
                                <i class="bi bi-twitter"></i>
                            </p>
                        </div>
                    </div>
                    <hr class="pro-detail-divider" />
                </div>
            </div>
        </div>
    </div>
    <!-- Add this section to display reviews -->
    <div class="product-reviews">
        <h4>Customer Reviews</h4>
        <ul>
            @foreach (var review in Model.ProductReviews)
            {
                <li>
                    <p>Rating: @review.Rating</p>
                    <p>Comment: @review.Comment</p>
                </li>
            }
        </ul>
    </div>
    <div class="add-review-form">
        <h4>Add Your Review</h4>
        <form asp-action="AddReview" method="post">
            <input type="hidden" name="productId" value="@Model.DetailProduct.Id" />

            <label for="rating">Rating:</label>
            <input type="number" name="rating" min="1" max="5" required />

            <label for="comment">Comment:</label>
            <textarea name="comment" required></textarea>

            <button type="submit">Submit Review</button>
        </form>
    </div>

    <div class="container">

        <div class="Additional-info-section mb-5">
            <div class="text-center">
                <h3 class="mb-5 mt-5">Additional information</h3>
            </div>
            <ul class="Additional-info">
                <li>
                    <div class="Info-name">
                        <p>Catagory</p>
                    </div>
                    <div class="Info-points">
                        <p>@Model.DetailProduct.Category.CategoryName</p>
                    </div>
                </li>
                <li>
                    <div class="Info-name">
                        <p>Sizes</p>
                    </div>
                    <div class="Info-points">
                        <p>
                            <span>@formattedSizes</span>
                        </p>
                    </div>
                </li>
                <li>
                    <div class="Info-name">
                        <p>Stock Available  </p>
                    </div>
                    <div class="Info-points">
                        <p>@Model.DetailProduct.ProductQuantity </p>
                    </div>
                </li>
                <li>
                    <div class="Info-name">
                        <p>Detail </p>
                    </div>
                    <div class="Info-points">
                        <p>@Model.DetailProduct.ProductDescription </p>
                    </div>
                </li>

            </ul>
        </div>
    </div>
</div>
@section Scripts{
    <script>

        var Sizespan = document.getElementById("selected-size");
        var size = null;
        function chooseSize(e) {
            Sizespan.innerHTML = e;
            size = e;
        }

             function handleAddToCart() {
                 if (size)
                 {
        var productId = '@Model.DetailProduct.Id';

        var form = document.createElement('form');
        form.method = 'post';
        form.action = '/Home/Buy';

        var sizeIdInput = document.createElement('input');
        sizeIdInput.type = 'hidden';
        sizeIdInput.name = 'sizeId';
        sizeIdInput.value = size;
        form.appendChild(sizeIdInput);

        var idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = productId;
        form.appendChild(idInput);

        document.body.appendChild(form);
        form.submit();
                 }
                 else
                 {
        alert('Please select a size before adding to the cart.');
    }
}

    </script>
}