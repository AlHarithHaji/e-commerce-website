        border-radius: 100px;
    }

    .color-checks {
        list-style: none;
        display: inline-block;
        margin-right: 10px;
    }

    .c-option::before {
        content: " ";
        height: 34px;
        width: 34px;
        display: inline-block;
        border: 1px solid transparent;
        position: relative;
        top: -3px;
        right: 3px;
        border-radius: 32px;
    }

    .Active-Color .c-option::before {
        border: 1px solid grey;
    }

    .size-li {
        display: inline-block;
        margin-right: 20px;
        padding: 10px 20px;
        border: 1px solid lightgray;
        color: grey;
    }

    .Active-Size {
        color: black;
        border-color: gray;
    }

    .Quantity-section {
        display: flex;
        gap: 15px;
    }

    .quantity-group {
        border: 3px solid lightgray;
        height: 50px;
        min-width: 170px;
        border-radius: 3px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .quantity-buttons {
        font-size: 30px;
        margin: 0;
        padding: 0 15px;
        cursor: pointer;
    }

    .P_Quantity {
        margin: 0;
        font-size: 20px;
    }

    .Deleivery-title {
        margin: 10px 0;
    }

    .detail-pro-p {
        margin-bottom: 20px;
    }

    .Additional-info li {
        display: flex;
        width: 100%;
        list-style: none;
        border-bottom: 1px solid lightgray;
        gap: 20px;
    }

        .Additional-info li p {
            margin: 0px;
            padding: 15px 0;
            font-size: 14px;
        }

    .Info-name {
        min-width: 140px;
    }

        .Info-name p {
            font-weight: 900;
        }

    .product-reviews {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .product-reviews h4 {
            color: #333;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .product-reviews ul {
            list-style-type: none;
