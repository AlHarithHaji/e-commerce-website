    <title>He&She Store</title>

</head>

<body>
    <header>
        <div class="navbar-Sofine">
            <nav>
                <div class="custom-container">
                    <div class="desktop-nav-view">
                        <div class="row align-items-center">
                            <div class="col-md-5 ">
                                <div id="navbar">
                                    <ul>
                                        <li class="nav-parent-li">
                                            <a href="/Home/Index" class="nav-parent-a a-hover">Home</a>
                                        </li>
                                        <li class="nav-parent-li">
                                            <a href="/Home/Shop" class="nav-parent-a a-hover">Shop</a>
                                        </li>
                                        <li class="nav-parent-li">
                                            <a href="/Home/About" class="nav-parent-a a-hover">About</a>
                                        </li>
                                        <li class="nav-parent-li">
                                            <a href="/Home/Contactus" class="nav-parent-a a-hover">Contact</a>
                                        </li>
                                        <li class="nav-parent-li">
                                            <a href="/Home/testimonialwrite" class="nav-parent-a a-hover">Testimonial </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="text-center">
                                    <img src="~/assets/img/logo/Logo.png" class="" alt="">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="nav-images">
                                    <ul>
                                        @if (User.IsInRole("User"))
                                        {
                                            <li class="nav-parent-li">
                                                $: @ViewBag.AccountBalance
                                            </li>
                                            <li class="nav-parent-li">

                                            </li>
                                            <li class="nav-parent-li">
                                                <a href="/Home/UserDashborad" class="nav-parent-a a-hover">User Dashborad</a>
                                            </li>
                                            <li class="nav-parent-li">
                                                <a href="/Home/Logout" class="nav-parent-a a-hover">Logout</a>
                                            </li>


                                        }
                                        else if (User.IsInRole("SuperAdmin"))
                                        {
                                            <li class="nav-parent-li">
                                                <a href="/Admin/Index" class="nav-parent-a a-hover">Admin Dashborad</a>
                                            </li>

                                        }
                                        else if (User.IsInRole("GuestUser"))
                                        {
                                            <li class="nav-parent-li">
                                                <a class="nav-parent-a a-hover">
                                                    Guest User
                                                </a>
                                            </li>
                                            <li class="nav-parent-li">
                                                <a href="/Home/Logout" class="nav-parent-a a-hover">Logout</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="nav-images-li">
                                                <a href="/Identity/Account/Login">
                                                    <i class="bi bi-person"></i>
                                                </a>
                                            </li>
                                        }

                                        <li class="nav-images-li position-relative">
                                            <a href="/Home/Cart" id="cart-bar">
                                                @if (ViewBag.CartCount > 0)
                                                {
                                                    <i class="bi bi-cart4"></i>
                                                    <span class="nav-conter order-counter">@ViewBag.CartCount</span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-cart4"></i>

                                                }
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()

    </main> <footer>
